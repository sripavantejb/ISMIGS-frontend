# Admin backend API base URL. Use deployed backend in production; leave empty in dev to use Vite proxy (localhost:3001).
VITE_API_URL=https://ismigs-backend.vercel.app

# Supabase (for Risk Intelligence AI and Admin sector emails)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=your-anon-key

# Admin panel: password to access /admin (optional; if unset, admin is open)
VITE_ADMIN_PASSWORD=your-admin-password

# Admin: secret for send-sector-email Edge Function (set same value as ADMIN_SECRET in Supabase secrets)
VITE_ADMIN_SECRET=your-admin-secret

# OpenAI (optional, for Predictions page AI outlook)
# Set one of these for the /api/openai proxy to work
OPENAI_API_KEY=sk-...
# VITE_OPENAI_API_KEY=sk-...

# Email (Supabase Edge Function secrets, not .env): use one of:
# - RESEND_API_KEY (Resend) and optionally RESEND_FROM
# - SMTP_HOST, SMTP_PORT, SMTP_USER, SMTP_PASSWORD, SMTP_FROM (Gmail or other SMTP)
